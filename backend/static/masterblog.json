{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "host": "localhost:5002",
  "basePath": "/",
  "schemes": ["http"],
  "tags": [
    {
      "name": "Post",
      "description": "Post API - CRUD operations"
    }
  ],
  "paths": {
    "/api/posts": {
      "get": {
        "summary": "Returns all blog posts",
        "tags": ["Post"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "type": "string",
            "required": false,
            "description": "Sort field: title or content"
          },
          {
            "name": "direction",
            "in": "query",
            "type": "string",
            "required": false,
            "description": "Sort direction: asc or desc"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },
      "post": {
        "summary": "Creates a new blog post",
        "tags": ["Post"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              },
              "required": ["title", "content"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Post created successfully"
          },
          "400": {
            "description": "Invalid data provided"
          }
        }
      }
    },

    "/api/posts/{id}": {
      "delete": {
        "summary": "Deletes a blog post by id",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the post to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "Post deleted successfully"
          },
          "404": {
            "description": "Post not found"
          }
        }
      },
      "put": {
        "summary": "Updates an existing blog post",
        "tags": ["Post"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the post to update"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              }
            },
            "description": "Fields to update (title and/or content)"
          }
        ],
        "responses": {
          "200": {
            "description": "Post updated successfully"
          },
          "400": {
            "description": "Invalid update data"
          },
          "404": {
            "description": "Post not found"
          }
        }
      }
    },

    "/api/posts/search": {
      "get": {
        "summary": "Search for blog posts by title or content",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "type": "string",
            "required": false,
            "description": "Search posts that contain this text in title"
          },
          {
            "name": "content",
            "in": "query",
            "type": "string",
            "required": false,
            "description": "Search posts that contain this text in content"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns matching posts (may be empty)"
          }
        }
      }
    }
  }
}
